<%= form_with model: current_user do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </div>

  <div>
    <%= form.label :Role %><br>
    <%= form.radio_button :role, "owner" %>
    <%= form.label :owner %>
    <%= form.radio_button :role, "customer" %>
    <%= form.label :customer %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
