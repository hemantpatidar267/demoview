<head>
  <style>
        input[type="submit"]{
      background-color: #255AED; /* Green */
      border: none;
      color: white;
      padding: 4px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
    }
    input[type="submit"]:hover{
       background-color: #082167;
    }
  </style>
</head>
<section class="vh-100" style="background-color: #8ECD9F;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                  <%= form_with model: @user do |form| %>
                    <p>
                      <%= form.label 'Name:'%><br>
                      <%= form.text_field :name, id: 'name' %>
                      <% @user.errors.full_messages_for(:name).each do |message| %>
                        <span><%= message %></span>
                      <% end %>
                    </p>
                    <p>
                      <%= form.label 'Email:'%><br>
                      <%= form.email_field :email, id: 'email' %>
                      <% @user.errors.full_messages_for(:email).each do |message| %>
                        <span><%= message %></span>
                      <% end %>
                    </p>
                    <p>
                      <%= form.label 'Password:'%><br>
                      <%= form.password_field :password, id: 'password' %>
                      <% @user.errors.full_messages_for(:password).each do |message| %>
                        <span><%= message %></span>
                      <% end %>
                    </p>
                    <div>
                      <%= form.label :Role %><br>
                      <%= form.radio_button :role, "owner" %>
                      <%= form.label :owner %>
                      <%= form.radio_button :role, "customer" %>
                      <%= form.label :customer %>
                      <% @user.errors.full_messages_for(:role).each do |message| %>
                        <span><%= message %></span>
                      <% end %>
                    </div>
                    <p>
                      <%= form.submit 'Register user'%>
                    </p>
                  <% end %>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
