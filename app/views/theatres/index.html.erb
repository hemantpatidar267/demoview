<h1 align="center"> All Theatres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>User_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @theatre.each do |theatre| %>
      <tr>
        <td><%= theatre.name %></td>
        <td><%= theatre.address %></td>
        <td><%= theatre.user_id %></td>
        <td><%= link_to 'show', theatre %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= button_to 'create theatre', new_theatre_path, method: :get %>
<%= button_to 'search_theatre_by_movie', search_theatre_by_movie_path, method: :get %>

