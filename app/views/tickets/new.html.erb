<div><%= flash[:notice] %></div>
<%= form_with model: @ticket do |form| %>
  <div>
    <%= form.label :theatre_id %><br>
    <%= form.text_field :theatre_id %>
    <% @ticket.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :movie_id %><br>
    <%= form.text_area :movie_id %>
    <% @ticket.errors.full_messages_for(:address).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :number_of_tickets %><br>
    <%= form.text_area :number_of_tickets %>
    <% @ticket.errors.full_messages_for(:address).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
