<style>
  .abc{
    font-weight: bold;
    font-size: 25px;
  }

  .navbar {
  background-color: #000;
  color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
}
.navbar-title {
  font-size: 24px;
  margin: 0;
}
.navbar-buttons {
  display: flex;
  gap: 10px;
}
.navbar-button {
  background-color: #0062cc;
  color: #FFFFFF;
  border: none;
  padding: 8px 12px;
  border-radius: 4px;
  text-decoration: none;
  cursor: pointer;
}
.navbar-button:hover {
  background-color: indigo;
}
td{
  font-size: bolder;
}

h1{
  display: flex;
  align-items: center;
  justify-content: center;
  background: green;
  color: white;
}
.ab{
  color: red;
  padding: 8px 12px;
  font-size: 25px;
}
</style>


<nav class="navbar">
  <div class="navbar-buttons">
     <%= button_to 'Home', front_path, method: :get, class: 'navbar-button' %>
  </div>
</nav>

<section class="vh-100 bg-image"
  style="background-image: url(<%= asset_path 'cba.jpg' %>); background-repeat: no-repeat;  background-size: cover;">
<table class="table">



  <thead class="thead-dark">
    <tr>
      <th>Alphanumeric_id</th>
      <th>Number_of_tickets</th>
      <th>Theatre_id</th>
      <th>movie_id</th>
      <th>user_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.alphanumeric_id %></td>
        <td><%= ticket.number_of_tickets %></td>
        <td><%= ticket.theatre_id %></td>
        <td><%= ticket.movie_id %></td>
        <td><%= ticket.user_id %></td>
        <td><%= link_to 'show', ticket %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= button_to 'create ticket', new_ticket_path, method: :get, class: 'navbar-button' %>

    <div class="ab"><%= flash[:notice] %></div>

</section>



















