<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create Movie</h2>

              <%= form_with model: @movie do |form| %>

                <div class="form-outline mb-4">
                  <%= form.label :name, class: "form-label"%><br>
                  <%= form.text_field :name, class: "form-control form-control-lg"%>
                  <% @movie.errors.full_messages_for(:name).each do |message| %>
                    <div><%= message %></div>
                  <% end %>
                </div>

                <div class="form-outline mb-4">
                  <%= form.label :start_date, class: "form-label" %><br>
                  <%= form.text_field :start_date, class: "form-control form-control-lg" %>
                  <% @movie.errors.full_messages_for(:start_date).each do |message| %>
                    <div><%= message %></div>
                  <% end %>
                </div>

                <div class="form-outline mb-4">
                  <%= form.label :end_date, class: "form-label" %><br>
                  <%= form.text_field :end_date, class: "form-control form-control-lg" %>
                  <% @movie.errors.full_messages_for(:end_date).each do |message| %>
                    <div><%= message %></div>
                  <% end %>
                </div>

                <div class="form-outline mb-4">
                  <%= form.label :image, class: "form-label" %><br>
                  <%= form.file_field :image, class: "form-control form-control-lg" %>
                </div>


        <div class="d-flex justify-content-center">
                  <%= form.submit "Register", class: "btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
                <div>



              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>





<%= render "form", movie: @movie %>
