<h1 align="center"> Available movie</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start_date</th>
      <th>End_date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.start_date %></td>
        <td><%= movie.end_date%></td>
        <td><%= link_to 'show', movie %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>



</br>

<div><%= flash[:notice] %></div>
<%= form_with  url: '/movies', method: :get do |form| %>
  <div>
    <%= form.label :search %><br>
    <%= form.text_field :query %>
  </div>
  <div>
    <%= form.submit 'enter' %>
  </div>
<% end %>
</br>

<%= button_to 'create movie', new_movie_path, method: :get if @current_user.role == 'owner' %>
