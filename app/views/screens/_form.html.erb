<%= form_with model: screen do |form| %>
  <div>
    <%= form.label :seating_capacity %><br>
    <%= form.text_field :seating_capacity %>
    <% theatre.errors.full_messages_for(:seating_capacity).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :theatre_id %><br>
    <%= form.text_field :theatre_id %>
    <% theatre.errors.full_messages_for(:theatre_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :movie_id %><br>
    <%= form.text_field :movie_id %>
    <% theatre.errors.full_messages_for(:movie_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
